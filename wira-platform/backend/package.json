{
    "name": "wira-backend",
    "version": "1.0.0",
    "description": "Backend API para plataforma WIRA de capacitação e reintegração econômica",
    "main": "src/index.ts",
    "scripts": {
        "start": "node dist/index.js",
        "start:prod": "NODE_ENV=production node dist/index.js",
        "dev": "ts-node src/index.ts",
        "dev:port": "cross-env-shell \"PORT=\\$(node -e \\\"require('detect-port')(3000).then(console.log)\\\") && ts-node src/index.ts\"",
        "dev:3001": "PORT=3001 ts-node src/index.ts",
        "dev:3002": "PORT=3002 ts-node src/index.ts",
        "dev:watch": "ts-node --watch src/index.ts",
        "dev:multi": "concurrently \"npm run dev\" \"npm run dev:3001\"",
        "build": "tsc -p tsconfig.build.json",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "postbuild": "cp -r src/data dist/ && cp -r src/logs dist/ && cp .env dist/ || true",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=integration",
        "test:unit": "jest --testPathPattern=unit",
        "lint": "eslint src/ --ext .ts",
        "lint:fix": "eslint src/ --ext .ts --fix",
        "type-check": "tsc --noEmit",
        "init-db": "ts-node src/database/index.ts",
        "migrate": "ts-node scripts/migrate.ts",
        "migrate:deploy": "prisma migrate deploy",
        "seed": "ts-node scripts/seed.ts",
        "setup": "npm run migrate && npm run seed",
        "security:check": "npm audit",
        "security:fix": "npm audit fix",
        "validate:env": "ts-node -e \"require('dotenv').config(); console.log('✅ Environment variables validated')\"",
        "serve": "npm run dev"
    },
    "keywords": [
        "wira",
        "capacitação",
        "reintegração",
        "tráfico humano",
        "moçambique"
    ],
    "author": "WIRA Platform Team",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.18.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "detect-port": "^2.1.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.0",
        "rimraf": "^5.0.5",
        "sqlite3": "^5.1.6",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.24",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.19.23",
        "@types/sqlite3": "^3.1.11",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "eslint": "^8.54.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-n": "^16.4.0",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.5.0",
        "nodemon": "^3.0.1",
        "prisma": "^6.18.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/index.ts",
            "!src/database/index.ts"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "testMatch": [
            "**/tests/**/*.test.ts"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
        ]
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
