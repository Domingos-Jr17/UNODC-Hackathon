{
    "name": "wira-backend",
    "version": "1.0.0",
    "description": "Backend API para plataforma WIRA de capacitação e reintegração econômica",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.secure.js",
        "start:legacy": "node src/index.js",
        "dev": "nodemon src/index.secure.js",
        "dev:legacy": "nodemon src/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=integration",
        "test:unit": "jest --testPathPattern=unit",
        "lint": "eslint src/ tests/",
        "lint:fix": "eslint src/ tests/ --fix",
        "init-db": "node src/database/db.secure.js",
        "init-db:legacy": "node src/database/db.js",
        "security:check": "npm audit",
        "security:fix": "npm audit fix",
        "validate:env": "node -e \"require('dotenv').config(); console.log('✅ Environment variables validated')\""
    },
    "keywords": [
        "wira",
        "capacitação",
        "reintegração",
        "tráfico humano",
        "moçambique"
    ],
    "author": "WIRA Platform Team",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.0",
        "bcryptjs": "^2.4.3",
        "sqlite3": "^5.1.6",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "crypto": "^1.0.1",
        "winston": "^3.11.0",
        "redis": "^4.6.10",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.5.0",
        "supertest": "^6.3.3",
        "eslint": "^8.54.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-n": "^16.4.0",
        "eslint-plugin-promise": "^6.1.1"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/index.js",
            "!src/database/db.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
    }
    "engines": {
        "node": ">=14.0.0"
    }
}